---
import { Badge } from '../components/Badge.tsx'
import Card from '../components/Card.astro'
import { MarkAllAsRead } from '../components/MarkAllAsRead'
import { Notifications } from '../components/Notifications.tsx'

import Layout from '../layouts/Layout.astro'
---

<Layout title='Welcome to Astro.'>
  <main
    class='flex flex-col justify-center items-center bg-light-blue lg:h-dvh'
  >
    <Card>
      <div
        slot='header'
        class='flex justify-between p-6'
      >
        <h1 class='font-bold text-xl flex gap-4'>
          Notifications <Badge client:load />
        </h1>
        <MarkAllAsRead
          client:load
          label='Mark all as read'
        />
      </div>
      <div
        class='flex flex-col'
        slot='body'
      >
        <Notifications client:load />
      </div>
    </Card>
    <footer class='text-xs py-2 text-neutral text-center'>
      Challenge by <a
        href='https://www.frontendmentor.io/challenges/notifications-page-DqK5QAmKbC/hub'
        target='_blank'
        >Frontend Mentor</a
      >. Coded by <a
        class='font-semibold hover:text-secondary transition ease-in-out'
        href='https://www.linkedin.com/in/emanuelramirezabarca/'
        target='_blank'
        >Tomas Emanuel Ramirez Abarca</a
      >.
    </footer>
  </main>
</Layout>
