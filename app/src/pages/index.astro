---
import Badge from '../components/Badge.astro'
import Card from '../components/Card.astro'
import { MarkAllAsRead } from '../components/MarkAllAsRead'
import { Notifications } from '../components/Notifications.tsx'

import Layout from '../layouts/Layout.astro'
---

<Layout title='Welcome to Astro.'>
  <main class='flex justify-center items-center bg-light-blue h-dvh'>
    <Card>
      <div
        slot='header'
        class='flex justify-between p-6'
      >
        <h1 class='font-bold text-xl flex gap-4'>
          Notifications <Badge>3</Badge>
        </h1>
        <MarkAllAsRead label='Mark all as read' />
      </div>
      <div
        class='flex flex-col'
        slot='body'
      >
        <Notifications client:load />
      </div>
    </Card>
  </main>
</Layout>
