---
// Supports weights 200-800
import '@fontsource-variable/plus-jakarta-sans'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Frontend Mentor - Notifications page'
    />
    <meta
      name='keywords'
      content='Notifications App, Frontend Mentor, Tailwindcss, React, Astro, TypeScript, Zustand'
    />

    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='author'
      content='Tomas Emanuel Ramirez Abarca'
    />

    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body class='bg-light'>
    <slot />
  </body>
</html>
<style is:global>
  body {
    font-family: 'Plus Jakarta Sans Variable', sans-serif;
  }
</style>
